{
	"name": "eslint-plugin-mediawiki",
	"version": "0.2.4",
	"description": "MediaWiki-specific linting rules, for use in MediaWiki core and extensions.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wikimedia/eslint-plugin-mediawiki.git"
	},
	"license": "MIT",
	"keywords": [
		"eslint",
		"eslintplugin",
		"eslint-plugin"
	],
	"main": "src/index.js",
	"scripts": {
		"pretest": "eslint .",
		"test": "nyc mocha --reporter dot tests/ && git diff --exit-code docs/",
		"doc": "rm -f docs/rules/* && mocha --reporter dot tests/** --doc",
		"build": "npm run doc"
	},
	"files": [
		"src"
	],
	"dependencies": {
		"eslint-plugin-vue": "^6.2.2"
	},
	"peerDependencies": {
		"eslint": ">=5.0.0"
	},
	"devDependencies": {
		"eslint-config-wikimedia": "^0.16.1",
		"eslint-docgen": "^0.4.0",
		"eslint-plugin-eslint-plugin": "^2.2.2",
		"mocha": "^7.2.0",
		"nyc": "^15.1.0"
	},
	"bugs": {
		"url": "https://github.com/wikimedia/eslint-plugin-mediawiki/issues"
	},
	"homepage": "https://github.com/wikimedia/eslint-plugin-mediawiki#readme",
	"directories": {
		"test": "tests"
	}
}
